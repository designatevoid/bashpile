#!/usr/bin/env bashpile

# Usage: testrig com.bashpile.Bashpile program -gui src/test/resources/0120-functionCall.bashpile

classPath: str
$(mvn dependency:build-classpath -Dmdep.outputFile=cpath.txt).run() creates "cpath.txt":
    classPath = $(cat cpath.txt).output()
$("java -cp target/classes:$[classPath] org.antlr.v4.gui.TestRig $[__OPTIONS["all"]]").run()
